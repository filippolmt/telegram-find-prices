# Telegram API credentials (from https://my.telegram.org)
API_ID=
API_HASH=

# Bot token (from @BotFather)
BOT_TOKEN=

# Telegram account for the user client
USERNAME=
PHONE_NUMBER=

# Comma-separated numeric user IDs allowed to use the bot (empty = open to all)
# Get your ID from @userinfobot
ALLOWED_USERS=

# Telethon StringSession for user client (generated with: make gen-session)
# Avoids the need for interactive authentication and session files
# CLIENT_SESSION_STRING=

# Timezone for daily summary (default: UTC)
TIMEZONE=Europe/Rome

# Hour of the day for daily summary, 0-23 (default: 21)
DAILY_SUMMARY_HOUR=21
